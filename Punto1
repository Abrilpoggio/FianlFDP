MAX = 100
desarrolladores = []
cantidad = 0

seguir = "s"

while seguir == "s" and cantidad < MAX:
    nombre = input("Nombre completo: ")
    
    lenguaje = input("Lenguaje principal (Python, Javascript, C, Go): ")
    while lenguaje not in ["Python", "Javascript", "C", "Go"]:
        lenguaje = input("Lenguaje inválido. Reingrese (Python, Javascript, C, Go): ")
        
    pais = input("País de residencia: ")
    proyectos = int(input("Cantidad de proyectos finalizados: "))
    calificacion = float(input("Calificación promedio (1 a 5): "))
    
    desarrolladores.append([nombre, lenguaje, pais, proyectos, calificacion])
    cantidad += 1

    seguir = input("¿Desea seguir cargando? (s/n): ")


total_calif = 0
cantidad_py = 0

for i in range(cantidad):
    if desarrolladores[i][1] == "Python":
        total_calif += desarrolladores[i][4]
        cantidad_py += 1

if cantidad_py > 0:
    promedio_py = total_calif / cantidad_py
    print("\nCalificación promedio de desarrolladores Python:", round(promedio_py, 2))
else:
    print("\nNo hay desarrolladores con lenguaje principal Python.")


for i in range(cantidad - 1):
    for j in range(i + 1, cantidad):
        if (desarrolladores[i][2] > desarrolladores[j][2]) or \
           (desarrolladores[i][2] == desarrolladores[j][2] and desarrolladores[i][0] > desarrolladores[j][0]):
            aux = desarrolladores[i]
            desarrolladores[i] = desarrolladores[j]
            desarrolladores[j] = aux

print("\nListado ordenado por país y nombre:")
for i in range(cantidad):
    print("Nombre:", desarrolladores[i][0], "| Lenguaje:", desarrolladores[i][1], "| País:", desarrolladores[i][2])


for i in range(cantidad - 1):
    for j in range(i + 1, cantidad):
        if desarrolladores[i][0] > desarrolladores[j][0]:
            aux = desarrolladores[i]
            desarrolladores[i] = desarrolladores[j]
            desarrolladores[j] = aux

inicio = 0
fin = cantidad - 1
encontrado = False

while inicio <= fin and not encontrado:
    medio = (inicio + fin) // 2
    if desarrolladores[medio][0] == "Ana Martinez":
        encontrado = True
    elif "Ana Martinez" < desarrolladores[medio][0]:
        fin = medio - 1
    else:
        inicio = medio + 1

print()
if encontrado:
    print("La desarrolladora Ana Martinez está registrada.")
    print("Lenguaje principal:", desarrolladores[medio][1])
    print("País de residencia:", desarrolladores[medio][2])
else:
    print("La desarrolladora Ana Martinez no está registrada.")
